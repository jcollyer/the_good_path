<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
</head>
<body>



  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <div id="user_nav">
    <% if current_user %>
      <div class="loggedin clearfix">
        <p>Logged in as: &nbsp; <span class="hh1"><%= current_user.email %></span></p>
        <%= link_to "Log out", log_out_path, :class => "button", :style => "float:right;" %>
      </div>
    <% else %>
      <%# link_to "Sign up", sign_up_path %>
      <%# link_to "log in", log_in_path %>
    <% end %>
  </div>



<%= yield %>

</body>
</html>
