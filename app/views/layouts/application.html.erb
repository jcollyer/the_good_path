<!DOCTYPE html>
<html>
<head>
  <title>the Good Path</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
</head>
<body>



  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <div id="user_nav">
    <div class="view_bar">
      <div class="view_bar_title">
        <h1>the Good Path</h1>
      </div>
    <% if current_user %>
      <div class="loggedin clearfix">
        <p>Logged in as: &nbsp; <span class="hh1"><%= current_user.email %></span></p>
        <%= link_to "Log out", log_out_path, :class => "button", :style => "float:right;" %>
      </div>
    <% else %>
        <div class="vew_bar_right">
          <%= link_to "Sign In", sign_up_path, :class => "button" %>
        </div>
        <div class="vew_bar_right">
          <%= link_to "Sign Up", "/auth/twitter", :class => "button" %>
        </div>
      </div>

      <%# link_to "log in", log_in_path %>
    <% end %>
  </div>



<%= yield %>

</body>
</html>
